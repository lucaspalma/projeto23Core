@model IList<blog.Models.Post>
<html>
<head></head>
<body>
    <h2>Lista de Posts</h2>
    <table>
        <thead>
            <tr>
                <th>Título</th>
                <th>Resumo</th>
                <th>Categoria</th>
                <th>Publicado?</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var post in Model) {
                <tr>
                    <td><a href="/Post/Visualiza/@post.Id">@post.Titulo</a></td>
                    <td>@post.Resumo</td>
                    <td>@post.Categoria</td>
                    <td>
                        @if(post.Publicado) {
	                        @Html.Raw(string.Format("{0:dd/MM/yyyy}", post.DataPublicacao))
                        } else {
                            @Html.Raw("Não")
                        }
                    </td>
                    <td>
                        <a href="/Post/RemovePost/@post.Id">Remover</a>
                        <a href="/Post/PublicaPost/@post.Id">Publicar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>