@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model IList<blog.Models.Post>
<html>
<head></head>
<body>
    <h2>Lista de Posts</h2>
    @Html.ActionLink("Novo Post", "Novo")
    <table>
        <thead>
            <tr>
                <th>Título</th>
                <th>Resumo</th>
                <th>Categoria</th>
                <th>Publicado?</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var post in Model) {
                <tr>
                    <td>
                        @Html.ActionLink(post.Titulo, "Visualiza", new { id = post.Id})
                    </td>
                    <td>@post.Resumo</td>
                    <td>@post.Categoria</td>
                    <td>
                        @if(post.Publicado) {
	                        @Html.Raw(string.Format("{0:dd/MM/yyyy}", post.DataPublicacao))
                        } else {
                            @Html.Raw("Não")
                        }
                    </td>
                    <td>
                        <a asp-action="RemovePost" asp-route-id="@post.Id">Remover</a>
                        <a asp-controller="Post" asp-action="PublicaPost" asp-route-id="@post.Id">Publicar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>