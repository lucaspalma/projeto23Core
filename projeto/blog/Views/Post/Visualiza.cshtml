@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model blog.Models.Post
<html>
<head></head>
<body>
  <form asp-controller="Post" asp-action="EditaPost" method="post">
    <input type="hidden" asp-for="Id"/>
    <input type="hidden" asp-for="Publicado"/>
    <input type="hidden" asp-for="DataPublicacao"/>
    <label asp-for="Titulo"></label>
    <input asp-for="Titulo"/>
    <span asp-validation-for="Titulo"></span>
    <label asp-for="Resumo"></label>
    <input asp-for="Resumo"/>
    <span asp-validation-for="Resumo"></span>
    <label asp-for="Categoria"></label>
    <input asp-for="Categoria"/>
    <span asp-validation-for="Categoria"></span>
    <button type="submit">Cadastrar</button>
  </form>
  <script src="~/lib/jquery/dist/jquery.js"></script>
  <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
  <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
</body>
</html>